<% layout("/layouts/boilerplate") %>

    <body>
        <h2>All Listings</h2>

        <div class="row row-col-lg-4 row-cols-md-2">
            <% for (let listing of allListings){ %>
                <div class="card">
                    <a href="/listings/<%= listing._id %>">
                        <img src="<%= listing.image %>" class="card-img-top" alt="listing_img" style="height: 17rem;">
                        <div class="card-body">
                            <h6 class="card-text">
                                <%= listing.location %>
                            </h6>
                            <h6 class="btn btn-success" style="font-size: 12px;">
                                &#9733 <%= listing.rating %>
                            </h6>
                          
                            <p>
                               <b>&#8377 <%= listing.price.toLocaleString("en-IN") %></b> /night
                            </p>
                        </div>
                    </a>
                </div>
                <% } %>
    
        </div>
        
         

    </body>