<% layout("/layouts/boilerplate") %>

  <body>
    <div class="row">
      <div class="col-6 offset-3 mb-2">
        <h3>Listings Details</h3>
      </div>


      <div class=" col-6 offset-3 card">
        <img src="<%= listing.image %> " class="card-img-top show-img" alt="Listing_img">
        <div class="card-body">
          <p class="card-text">
            <b>
              <%= listing.title %>
            </b><br>
            <%= listing.description %> <br>
              &#8377 <%= listing.price.toLocaleString("en-IN") %> <br>
                <%= listing.location %> <br>
                  <%= listing.country %> <br>
                    &#9733 <%= listing.rating %> <br>
          </p>
        </div>
      </div>



      <div class="row btnns">
        <div class="col-4 mb-2">
          <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark">Edit list</a>
        </div>

        <form action="/listings/<%= listing._id%>?_method=DELETE" method="post">
          <button class="btn btn-outline-dark">Delete</button>
        </form>

      </div>

    


    </div>
  </body>